{
  "companyAnnouncements": ["Happy coding! ðŸš€"],
  "enabledPlugins": {
    "command-safety@sdui-marketplace": true
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "allowUnsandboxedCommands": true
  },
  "alwaysThinkingEnabled": true,
  "permissions": {
    "allow": [
      "Edit(./**)",
      "Read(~/**/CLAUDE.md)",
      "Edit(/tmp/**)",
      "Bash(uv:*)",
      "Bash(pytest:*)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(docker:*)",
      "Bash(docker-compose:*)",
      "Bash(npm:*)",
      "Bash(find:*)",
      "Bash(echo:*)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(touch:*)"
    ],
    "deny": ["Read(**/.env*)", "Bash(sudo:*)", "Bash(rm -rf:*)", "Bash(curl:*)", "Bash(wget:*)"]
  },
  "env": {
    "CLAUDE_LINT_COMMAND": "npm run lint",
    "CLAUDE_CODE_ENABLE_TELEMETRY": "1",
    "OTEL_METRICS_EXPORTER": "otlp"
  }
}
