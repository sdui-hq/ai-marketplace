{
  "$schema": "https://anthropic.com/claude-code/marketplace.schema.json",
  "name": "sdui-marketplace",
  "version": "0.1.0",
  "description": "Sdui's marketplace for AI tools",

  "owner": {
    "name": "sdui"
  },
  "plugins": [
    {
      "name": "command-safety",
      "source": "./plugins/command-safety",
      "description": "Pre-execution validator that blocks dangerous bash commands before they run",
      "version": "0.1.0",
      "keywords": ["safety", "security", "bash", "validation"],
      "category": "security"
    },
    {
      "name": "lint-runner",
      "source": "./plugins/lint-runner",
      "description": "Stop hook that runs linting when Claude completes tasks",
      "version": "0.1.0",
      "keywords": ["hooks", "quality", "automation"],
      "category": "quality"
    }
  ]
}
